{% extends 'base.html.twig' %}

{% block title %}Votre profil - Pokémon Symfony{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px;">
        <h1>Informations de votre compte</h1>
        {# Affichage d'un message flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-dismissible alert-success">
                <p class="mb-0"><b>Succès ! </b>{{ message }}</p>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-dismissible alert-danger">
                <p class="mb-0"><b>Attention ! </b>{{ message }}</p>
            </div>
        {% endfor %}
		{{ form_start(form) }}
    
		<div class="form-group">
			{{ form_label(form.nomUtilisateur) }}
			{{ form_widget(form.nomUtilisateur) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.nomUtilisateur) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_widget(form.plainPassword) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.plainPassword) }}
			</div>
		</div>

        <div class="form-group">
			{{ form_label(form.email) }}
			{{ form_widget(form.email) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.email) }}
			</div>
		</div>

        <div class="mt-4 mb-4">
			{{ form_widget(form.isSubscribedNewsletter) }}
			{{ form_label(form.isSubscribedNewsletter) }}
		</div>

		<div class="form-group">
			{{ form_row(form._token) }}
		</div>
        
		<div class="form-group">
			{{ form_row(form.submit) }}
		</div>
{% endblock %}