{% extends 'base.html.twig' %}

{% block title %}Connexion - Pokémon Symfony{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px;">
        <h1 class="mt-4">Connexion</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <p class="mb-0"><b>Succès ! </b>{{ message }}</p>
            </div>
        {% endfor %}
        {% if error %}
        <div class="alert alert-danger mt-2 mb-2">
            <p class="mb-0"><b>Attention ! </b>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
        </div>
        {% endif %}
        <form action="{{ path('app_home_login') }}" method="POST">
            <div class="form-group">
                <label for="username" class="form-label mt-4">Adresse Email</label>
                <input type="username" name="_username" class="form-control" id="username" value="{{ last_username }}" placeholder="exemple@pokemonsymfony.fr">
                <small id="emailMessage" class="form-text text-muted"><strong>Souvenez-vous : Ne partagez jamais vos identifiants.</strong></small>
            </div>
            <div class="form-group">
                <label for="password" class="form-label mt-4">Mot De Passe</label>
                <input type="password" name="_password" class="form-control" id="password" placeholder="********" autocomplete="off">
            </div>

            <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
        </form>
{% endblock %}
