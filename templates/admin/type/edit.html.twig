{% extends 'base.html.twig' %}

{% block title %}Modification d'un type - Pok√©mon Symfony{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Gestion des types - Modification</h1>
        {# Affichage d'un message flash #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-dismissible alert-danger">
                <p class="mb-0"><b>Attention ! </b>{{ message }}</p>
            </div>
        {% endfor %}
		{{ form_start(form) }}
    
		{# Le champ ID n'est pas modifiable #}
		{{ form_row(form.id, {'attr': {'readonly': 'readonly'}}) }}

		<div class="form-group">
			{{ form_label(form.libelle) }}
			{{ form_widget(form.libelle) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.libelle) }}
			</div>
		</div>

        <div class="form-group">
			{{ form_label(form.image) }}
			{{ form_widget(form.image) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.image) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_row(form._token) }}
		</div>
        
		<div class="form-group">
			{{ form_row(form.submit) }}
		</div>
{% endblock %}
