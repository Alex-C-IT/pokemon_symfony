{% extends 'base.html.twig' %}

{% block title %}Ajout d'une attaque - Pok√©mon Symfony{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px;">
        <h1>Gestion des attaques - Ajout</h1>
        {# Affichage d'un message flash #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-dismissible alert-danger">
                <p class="mb-0"><b>Attention ! </b>{{ message }}</p>
            </div>
        {% endfor %}
		{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.nom) }}
			{{ form_widget(form.nom) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.nom) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.type) }}
			{{ form_widget(form.type) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.type) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.description) }}
			{{ form_widget(form.description) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.description) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.puissance) }}
			{{ form_widget(form.puissance) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.puissance) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.prec) }}
			{{ form_widget(form.prec) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.prec) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.pp) }}
			{{ form_widget(form.pp) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.pp) }}
			</div>
		</div>

		<div class="mt-4">
			{{ form_widget(form.cs) }}
			{{ form_label(form.cs) }}
		</div>

		<div class="form-group">
			{{ form_row(form._token) }}
		</div>
        
		<div class="form-group">
			{{ form_row(form.submit) }}
		</div>

{% endblock %}
