{% extends 'base.html.twig' %}

{% block title %}Ajout d'une attaque - Pokémon Symfony{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px;">
        <h1>Gestion des pokémons - Ajout</h1>
        {# Affichage d'un message flash #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-dismissible alert-danger">
                <p class="mb-0"><b>Attention ! </b>{{ message }}</p>
            </div>
        {% endfor %}
		{{ form_start(form) }}
    
		<div class="form-group">
			{{ form_label(form.numero) }}
			{{ form_widget(form.numero) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.numero) }}
			</div>
		</div>

        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
            <div class="form-error" style="color:red">
                {{ form_errors(form.nom) }}
            </div>
        </div>

        <div class="form-group">
			{{ form_label(form.image) }}
			{{ form_widget(form.image) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.image) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.miniImage) }}
			{{ form_widget(form.miniImage) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.miniImage) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.generation) }}
			{{ form_widget(form.generation) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.generation) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.types) }}
			{{ form_widget(form.types) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.types) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.consommable) }}
			{{ form_widget(form.consommable) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.consommable) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.attaques) }}
			{{ form_widget(form.attaques) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.attaques) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.stats) }}
			{{ form_widget(form.stats) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.stats) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_row(form._token) }}
		</div>
        
		<div class="form-group">
			{{ form_row(form.submit) }}
		</div>

{% endblock %}
