{% extends 'base.html.twig' %}

{% block title %}Ajout d'un dresseur - Pok√©mon Symfony{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px;">
        <h1>Gestion des dresseurs - Ajout</h1>
        {# Affichage d'un message flash #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-dismissible alert-danger">
                <p class="mb-0"><b>Attention ! </b>{{ message }}</p>
            </div>
        {% endfor %}
		{{ form_start(form) }}
    
		<div class="form-group">
			{{ form_label(form.nom) }}
			{{ form_widget(form.nom) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.nom) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.taille) }}
			{{ form_widget(form.taille) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.taille) }}
			</div>
		</div>

		<div class="mt-4">
			{{ form_widget(form.sexe) }}
			{{ form_label(form.sexe) }}
		</div>

		<div class="form-group">
			{{ form_label(form.message) }}
			{{ form_widget(form.message) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.message) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.user) }}
			{{ form_widget(form.user) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.user) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.pokemons) }}
			{{ form_widget(form.pokemons) }}
			<div class="form-error" style="color:red">
				{{ form_errors(form.pokemons) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_row(form._token) }}
		</div>
        
		<div class="form-group">
			{{ form_row(form.submit) }}
		</div>

{% endblock %}
